
    <div class="container-fluid">
      <br>
      <div class="row">
        <div class="col-lg-12">
          <div class="card">
            <div class="card-header">
              <h4>Default Tab</h4>
            </div>
            <div class="card-body">
              <div class="default-tab">
                <nav>
                  <div class="nav nav-tabs nav-justified" id="nav-tab" role="tablist">
                    <% data.gateways.forEach(function(gateway, index) {
                      var active = '';
                      if(index===0) {
                        active = 'active'
                      }
                    %>
                      <a class="nav-item nav-link <%=active%>"
                         id="nav-<%=gateway.name%>-tab"
                         data-toggle="tab"
                         href="#nav-<%=gateway.name%>"
                         role="tab"
                         aria-controls="nav-<%=gateway.name%>"
                         aria-selected="true">
                        <%=gateway.name%>
                      </a>
                    <% }); %>

                  </div>
                </nav>
                <div class="tab-content pl-3 pt-2" id="nav-tabContent">
                  <% data.gateways.forEach(function(gateway, index) {
                    active = '';
                    if(index===0) {
                      active = 'active'
                    }
                    %>

                    <div class="tab-pane fade show <%=active%>" id="nav-<%=gateway.name%>" role="tabpanel" aria-labelledby="nav-<%=gateway.name%>-tab">
                      <form id="gateway-<%=gateway.id%>" class="gatewayForm" action="javascript:buying('<%=gateway.id%>')">
                        <div class="form-check">
                        <% data.offers[gateway.id].forEach(function(offer) { %>
                        <div id="offers-<%=gateway.id%>">
                          <label for="radio<%=offer.id%>" class="form-check-label ">
                            <input
                                    type="radio"
                                    id="<%=offer.id%>"
                                    name="offers-<%=gateway.id%>"
                                    value="<%=offer.id%>"
                                    class="form-check-input">
                            <%=offer.amount%> <%=offer.domain.currency.symbol%>
                            <%if(offer.bonus && offer.bonus>0){%>
                            (<%=offer.bonus%> <%=offer.domain.currency.symbol%> offer)
                            <%}%>
                          </label>
                        </div>
                          <% }); %>
                        <div>
                          <button id="payment-button" type="submit" class="btn btn-lg btn-info btn-block">
                            <i class="fa fa-lock fa-lg"></i>&nbsp;
                            <span id="payment-button-amount">Pay</span>
                            <!--                            <span id="payment-button-sending" style="display:none;">Sendingâ€¦</span>-->
                          </button>
                        </div>
                      </div>
                      </form>
                    </div>
                  <% }); %>

                </div>

              </div>
            </div>
          </div>
        </div>
        <!-- /# column -->
      </div>
    </div>


<%- /* Expose server-rendered data as window.SAILS_LOCALS :: */ exposeLocalsToBrowser() %>
