<div id="chat-page" class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="au-card au-card--no-shadow au-card--no-pad m-b-40 au-card--border">
                        <div class="au-card-title" style="background-image:url('images/bg-title-02.jpg');">
                            <div class="bg-overlay bg-overlay--blue"></div>
                            <h3>
                                <i class="zmdi zmdi-comment-text"></i>Chat</h3>
                            <button class="au-btn-decline" @click="finishChat(0, false)">
                                <i class="zmdi zmdi-close"></i>
                            </button>
                        </div>
                        <div class="au-inbox-wrap">
                            <div class="au-chat au-chat--border">
                                <div class="au-chat__title">
                                    <div class="au-chat-info">
                                        <div id="chat_otherUserAvatar" class="avatar-wrap" v-bind:class="{ online: otherUserStatus}">
                                            <div class="avatar avatar--small">
                                                <img src="/images/icon/avatar-02.jpg" alt="John Smith">
                                            </div>
                                        </div>
                                        <span class="nick">

                                            <a href="#">{{otherUserName}} {{otherUserStatus}}</a>
                                            <div id="basicUsage">00:00:00</div>
                                        </span>
                                    </div>
                                </div>
                                <div id="chat_messages" class="au-chat__content au-chat__content2 js-scrollbar5">

                                    <div class="recei-mess-wrap" v-if="otherUserStatus === 'offline'">
                                        <span class="mess-time">Now</span>
                                        <div class="recei-mess__inner">
                                            <div class="avatar avatar--tiny">
                                                <img src="/images/icon/avatar-02.jpg" alt="John Smith">
                                            </div>
                                            <div class="recei-mess-list">
                                                <div class="recei-mess">Waiting for connection ...</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="au-chat-textfield">
                                    <form class="au-form-icon" @submit.prevent="chatSentMenssage()">
                                        <input id="chat_messageInput" class="au-input au-input--full au-input--h65 form-control" type="text"
                                               placeholder="Type a message" @disable="otherUserStatus==='online'">
                                        <button id="chat_sendButton" class="au-input-icon" @disable="otherUserStatus==='online'">
                                            <i class="zmdi zmdi-camera"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- exposeLocalsToBrowser() %>
