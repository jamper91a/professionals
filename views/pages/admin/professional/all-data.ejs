<script src="/js/pages/admin/professional/all-data.page.js"></script>

<table id="admin-professionals-all-data" class="table">
  <thead>
  <tr>
    <td>
      <label class="au-checkbox">
        <input type="checkbox">
        <span class="au-checkmark"></span>
      </label>
    </td>
    <td><%= __('Name'); %>2</td>
    <td><%= __('Email'); %></td>
    <td><%= __('Profession'); %></td>
    <td><%= __('Date'); %></td>
    <td></td>
  </tr>
  </thead>
  <tbody>
  <% professionals.forEach(function(professional) { %>
    <tr>
      <td>
        <label class="au-checkbox">
          <input type="checkbox">
          <span class="au-checkmark"></span>
        </label>
      </td>
      <td>
        <div class="table-data__info">
          <h6><%= professional.user.name; %></h6>
          <% if (professional.user.banned){ %>
            <span class="badge badge-warning">
              <% if(professional.user.banned) { %>
                <a href="#"><%= __('Banned'); %></a>
              <% } %>
            </span>
          <% } %>
        </div>
      </td>
      <td>
        <span class="table-data__info"><%= professional.user.username; %></span>
      </td>
      <td>
        <span class="table-data__info"><%= professional.profession.name; %></span>
      </td>
      <td>
        <span class="table-data__info"><%= professional.createdAt; %></span>
      </td>
      <td>
        <div class="table-data__info">

          <% if(professional.user.banned) { %>
            <button data-toggle="modal" data-target="#unbanmodal"
                    @click="selectUser(<%= professional.user.id; %>)"
                    type="button" class="btn btn-outline-warning">
              <i class="zmdi zmdi-close-circle-o"></i>&nbsp; <%= __('UnBan'); %>
            </button>
          <% } else { %>
            <button data-toggle="modal" data-target="#banmodal" @click="selectUser(<%= professional.user.id; %>)"
                    type="button" class="btn btn-outline-danger">
              <i class="zmdi zmdi-close-circle-o"></i>&nbsp; <%= __('Ban'); %>
            </button>
          <% } %>
          <button data-toggle="modal" data-target="#deletemodal" @click="selectUser(<%= professional.user.id; %>)"
                  type="button" class="btn btn-outline-danger">
            <i class="zmdi zmdi-delete"></i>&nbsp; <%= __('Delete'); %>
          </button>
        </div>
      </td>
    </tr>
  <% }); %>
  </tbody>
</table>
